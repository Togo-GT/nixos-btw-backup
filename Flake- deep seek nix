{
  description = "NixOS config for nixos-btw with Home Manager ‚ú®";

  inputs = {
    # üì¶ NixOS official channels
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";

    # üè† Home Manager integration
    home-manager = {
      url = "github:nix-community/home-manager";
      inputs.nixpkgs.follows = "nixpkgs";
    };

    # Add these suggested inputs for better stability
    nixpkgs-stable.url = "github:NixOS/nixpkgs/nixos-23.11"; # Stable branch
  };

  outputs = { self, nixpkgs, home-manager, ... } @ inputs:
    let
      system = "x86_64-linux"; # üñ• Your machine architecture
    in {
      nixosConfigurations = {
        nixos-btw = nixpkgs.lib.nixosSystem {
          inherit system;
          # Pass all inputs to configuration modules
          specialArgs = { inherit inputs; }; 

          modules = [
            ./configuration.nix     # üíª System configuration
            home-manager.nixosModules.home-manager

            {
              # üè† Home Manager settings
              home-manager.useUserPackages = true;
              home-manager.useGlobalPkgs = true;
              home-manager.users.gt = import ./home.nix;
              
              # Optional: Extra home-manager config
              home-manager.extraSpecialArgs = { inherit inputs; };
            }
          ];
        };
      };
    };
}
